      "type": "text",
      "required": false,
      "validation": {
        "pattern": "^[A-Z]{2}[0-9]{7}$"
      }
    },
    {
      "id": "application_subject",
      "label": {
        "uzbek": "Ariza mavzusi",
        "russian": "Тема заявления"
      },
      "type": "text",
      "required": true,
      "validation": {
        "minLength": 5,
        "maxLength": 200
      }
    }
