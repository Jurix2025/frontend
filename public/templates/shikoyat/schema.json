{
  "name": "Shikoyat",
  "name_en": "Complaint",
  "category": "complaints",
  "languages": ["uzbek", "russian"],
  "fields": [
    {
      "id": "recipient_organization",
      "label": {
        "uzbek": "Shikoyat yuborilayotgan tashkilot",
        "russian": "Организация получатель"
      },
      "type": "text",
      "required": true,
      "validation": {
        "minLength": 2,
        "maxLength": 200
      }
    },
    {
      "id": "recipient_position",
      "label": {
        "uzbek": "Lavozimi",
        "russian": "Должность"
      },
      "type": "text",
      "required": true
    },
    {
      "id": "recipient_name",
      "label": {
        "uzbek": "F.I.Sh.",
        "russian": "Ф.И.О."
      },
      "type": "text",
      "required": true,
      "validation": {
        "minLength": 2,
        "maxLength": 200
      }
    },
    {
      "id": "complainant_name",
      "label": {
        "uzbek": "Shikoyat qiluvchining F.I.Sh.",
        "russian": "Ф.И.О. заявителя"
      },
      "type": "text",
      "required": true,
      "validation": {
        "minLength": 2,
        "maxLength": 200
      }
    },
    {
      "id": "complainant_address",
      "label": {
        "uzbek": "Yashash manzili",
        "russian": "Адрес проживания"
      },
      "type": "text",
      "required": true
    },
    {
      "id": "complainant_phone",
      "label": {
        "uzbek": "Telefon raqami",
        "russian": "Номер телефона"
      },
      "type": "text",
      "required": false,
      "validation": {
        "pattern": "^\\+?[0-9]{9,15}$"
      }
    },
    {
      "id": "complainant_passport",
      "label": {
        "uzbek": "Pasport seriyasi va raqami",
        "russian": "Серия и номер паспорта"
      },
      "type": "text",
      "required": false,
      "validation": {
        "pattern": "^[A-Z]{2}[0-9]{7}$"
      }
    },
    {
      "id": "complaint_subject",
      "label": {
        "uzbek": "Shikoyat mavzusi",
        "russian": "Тема жалобы"
      },
      "type": "text",
      "required": true,
      "validation": {
        "minLength": 5,
        "maxLength": 200
      }
    },
    {
      "id": "respondent_name",
      "label": {
        "uzbek": "Shikoyat qilinayotgan shaxs/tashkilot",
        "russian": "Ответчик (лицо/организация)"
      },
      "type": "text",
      "required": false
    },
    {
      "id": "incident_date",
      "label": {
        "uzbek": "Voqea sanasi",
        "russian": "Дата инцидента"
      },
      "type": "date",
      "required": false
    }
  ],
  "ai_sections": [
    {
      "id": "ai_section_circumstances",
      "label": {
        "uzbek": "Voqea holatlari",
        "russian": "Обстоятельства дела"
      },
      "section_number": "1",
      "description": {
        "uzbek": "Shikoyat bilan bog'liq voqealar va holatlar",
        "russian": "События и обстоятельства, связанные с жалобой"
      },
      "prompt_guidance": "Generate detailed description of the circumstances and events related to the complaint. Include chronological facts and specific details."
    },
    {
      "id": "ai_section_violations",
      "label": {
        "uzbek": "Huquq buzilishi",
        "russian": "Нарушение прав"
      },
      "section_number": "2",
      "description": {
        "uzbek": "Qanday huquqlar buzilgan va qanday qonunlar",
        "russian": "Какие права нарушены и какие законы"
      },
      "prompt_guidance": "Generate description of violated rights and relevant laws or regulations. Be specific about legal violations."
    },
    {
      "id": "ai_section_evidence",
      "label": {
        "uzbek": "Dalillar",
        "russian": "Доказательства"
      },
      "section_number": "3",
      "description": {
        "uzbek": "Mavjud dalillar va hujjatlar",
        "russian": "Имеющиеся доказательства и документы"
      },
      "prompt_guidance": "Generate a section listing evidence and supporting documents. Include references to attached materials if applicable.",
      "required": false
    },
    {
      "id": "ai_section_demands",
      "label": {
        "uzbek": "Talablar",
        "russian": "Требования"
      },
      "section_number": "4",
      "description": {
        "uzbek": "Aniq talablar va so'rovlar",
        "russian": "Конкретные требования и просьбы"
      },
      "prompt_guidance": "Generate clear and specific demands or requests for resolution. Be firm but professional."
    }
  ]
}
